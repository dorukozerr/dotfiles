# This tmux statusbar config was created by tmuxline.vim
# on Sun, 22 Dec 2024

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour0,bg=colour5"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour5"
set -g status-style "none,bg=colour0"
set -g message-style "fg=colour0,bg=colour5"
set -g pane-border-style "fg=colour8"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=colour5,bg=colour8"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour5,bg=colour8"
set -g status-left "#[fg=colour0,bg=colour5]   #S #[fg=colour5,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour5,bg=colour8] : #(top -l 1 | grep -E \"^CPU\" | awk '{print 100-$7\"%%\"}')    #(memory_pressure | grep \"System-wide memory free percentage\" | awk '{print 100-$5\"%%\"}') #[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour5,bg=colour8] %R #[fg=colour5,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour5] #h  "
setw -g window-status-format "#[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour5,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour5] 󰈸 #W #[fg=colour5,bg=colour0,nobold,nounderscore,noitalics]"
